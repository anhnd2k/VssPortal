    <div class="form-row" style="margin-top: 25px">
        <div class="form-group col-sm-6">
            <div style="display:flex; align-items:center; margin-right: 30px">
                <div style="margin-right: 20px">Hiển thị bài viết lên Onboading :</div>
                <input type="checkbox" name="checkBox" value="true" @(Model.ListPost.Status == 1 ? "checked=\"checked\"" : "") />
            </div>
        </div>
        <div style="display:flex; align-items:center" class="form-group col-sm-6">
            <label>Thể loại bài viết:</label>
            <div class="col-sm-4">
                <select name="CheckValueCategory" class="form-control">
                    @foreach (var item in Model.Category)
                    {
                        <option selected=@(Model.ListPost.Category == item.CategoryId ? "selected" : null) value="@item.CategoryId">@item.CategoryName</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="marginHorizontal">
        <div class="marginBottom-20">Thubnail</div>
        <div style="display:flex">
            <label for="pickImg"><i style="cursor: pointer; color: red; font-size: 30px; margin: 0 19px;" class="fas fa-arrow-circle-up"></i></label>
            <div id="display-img">@Model.ListPost.ThumbNail</div>
            <input onchange="getImg(this.value);" style="visibility:hidden" id="pickImg" name="ThumbNail" type="file" accept=".jpg,.png,.jpeg, gif" />
        </div>
    </div>
    <textarea name="PostConten">@Model.ListPost.PostConten</textarea>
    <input type="submit" value="Cập nhật" class="btn-input" />
</form>

@section scripts{
    <script src="~/Areas/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/Areas/plugins/ckfinder/ckfinder.js"></script>

    <script type="text/javascript">

        CKEDITOR.replace('PostConten')

        function getImg(nameimg) {
            var img = nameimg.replace(/^.*\\/, "");
            $('#display-img').html(img);

        }
    </script>
}
