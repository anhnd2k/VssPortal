
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin1.cshtml";
}
@model vss_portal_web.Areas.Admin.Models.ModelControllerAdmin

<form method="post" action="" enctype="multipart/form-data" class="box">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, new { @style = "color: red" })

    <div style="padding: 10px 0" class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold" style="color: #dc0c2c"><a href="@Url.Action("Index","HomeAdmin")">Quản lý bài viết  </a>>>  Chỉnh sửa bài viết</h6>
    </div>
    <div class="marginBottom-20">post Title</div>
    <input style="width: 100%" placeholder="Enter your title " name="PostTitle" value="@Model.ListPost.PostTitle" />
    <div class="marginBottom-20" style="margin-top: 10px">Description</div>
    <input style="width: 100%" placeholder="Enter your Description " name="Description" value="@Model.ListPost.Description" />
    @*<div style="margin-top: 20px; display:flex; align-items:center">
            <div style="display:flex; align-items:center; margin-right: 30px">
                <div style="margin-right: 20px">Hiển thị bài viết lên Onboading :</div>
                <input type="checkbox" name="checkBox" value="true" @(Model.ListPost.Status == 1 ? "checked=\"checked\"" : "") />
            </div>
            <div style="display:flex; align-items:center">
                <label style="margin:0 10px 0 30px" for="cars">Thể loại bài viết:</label>

                <select name="CheckValueCategory" style="height: 34px; border-radius: 10px;" id="cars">
                    @foreach (var item in Model.Category)
