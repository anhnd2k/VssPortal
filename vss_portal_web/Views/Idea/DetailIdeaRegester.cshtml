
@{
    ViewBag.Title = "DetailIdeaRegester";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model DBConect.model.GetListIdeaRegester
    <style>
        .imgRedirect {
            margin-right: 10px
        }
    </style>
<main style="min-height: 69vh" id="main">
    <div style="margin-top: 50px; margin-bottom: 50px" class="container">
        <div style="height: 30px; width: 100%; display:flex; align-items:center; padding: 0 24px; margin: 30px 0">
            <a href="@Url.Action("Index", "Home")" class="imgRedirect">
                <img src="~/Areas/Admin/assets_admin/assets/img/ic_home.png" />
            </a>
            <div class="imgRedirect">
                <img src="~/Areas/Admin/assets_admin/assets/img/ic_arrow_right.png" />
            </div>
            <a href="@Url.Action("IdeaRegestered", "Idea")" class="imgRedirect" style="color: black; font-size: 20px">Danh sách ý tưởng bạn đã đóng góp</a>
            <div class="imgRedirect">
                <img src="~/Areas/Admin/assets_admin/assets/img/ic_arrow_right.png" />
            </div>
            <div style="color: black; font-size: 20px">Chi tiết ý tưởng @Model.NameIdea</div>
        </div>
        <div class="card" style="min-height: 65vh; display:flex; align-items:center">
            <div style="width: 950px; margin-top: 30px">
                <p style="text-align:center"><span style="font-size:28px"><strong>CỘNG HO&Agrave; X&Atilde; HỘI CHỦ NGHĨA VIỆT NAM</strong></span></p>

                <div class="soluction">
                    <p style="text-align:center"><span style="font-size:20px"><strong>Độc lập - Tự do - Hạnh Ph&uacute;c</strong></span></p>
                </div>

                <p style="text-align:center">&nbsp;</p>

                <p style="text-align:center"><span style="font-size:24px"><strong>ĐƠN ĐĂNG K&Yacute; &Yacute; TƯỞNG</strong></span></p>

                <p style="text-align:center"><span style="font-size:20px">K&iacute;nh gửi: Ban thường trực v&agrave; hội đồng S&aacute;ng kiến &Yacute; tưởng</span></p>

                <p><span style="font-size:16px"><strong>1. &Yacute; tưởng</strong></span></p>

                <p><span style="font-size:14px"><strong>T&ecirc;n &yacute; tưởng:&nbsp;</strong> @Model.NameIdea</span></p>

                <p><span style="font-size:16px"><strong>2. T&aacute;c giả</strong></span></p>

                <div style="display: flex; align-items:center;">
                    <span style="font-size:14px; flex:1"><strong>Họ v&agrave; t&ecirc;n:&nbsp;</strong> @Model.AuthorFullName</span>
                    <span style="font-size:14px; flex:1"><strong>Email người gửi:</strong> @Model.AuthorEmail</span>
                </div>
                <p></p>

                <p><span style="font-size:14px"><strong>&Yacute; tưởng n&agrave;y của: </strong>@(Model.IndividualIdea ? "Cá nhân" : (Model.IdeaOfDepartment != null ? Model.IdeaOfDepartmentName : "Tập thể nhiều cá nhân"))</span></p>

                <p><span style="font-size:16px"><strong>3. M&ocirc; tả giải ph&aacute;p</strong></span></p>

                <p><span style="font-size:14px"><strong>3.1 T&igrave;nh trạng trước khi &aacute;p dụng &yacute; tưởng</strong></span></p>

                <p>- @Model.StatusIdeaBefore</p>

                <p><span style="font-size:16px"><strong>3.2 Phạm vi &aacute;p dụng &yacute; tưởng</strong></span></p>

                <p>- @Model.LimitApply</p>

                <p><span style="font-size:16px"><strong>3.3 Lĩnh vực &aacute;p dụng &yacute; tưởng</strong></span></p>

                <p>- @Model.NameField</p>


                <p><span style="font-size:16px"><strong>3.4 Nội dung chi tiết &yacute; tưởng</strong></span></p>

                <p>- @Model.contenIdea</p>

                <p><span style="font-size:16px"><strong>3.5&nbsp; Nội dung bổ sung</strong></span></p>

                <p>- @Model.DetailMore</p>

                <p><span style="font-size:16px"><strong>4 T&agrave;i liệu k&egrave;m theo</strong></span></p>

                <p>
                    @if (Model.DocumentIdea != null)
                    {
                        @Html.ActionLink("Tải xuông file đính kèm (Click để tải xuống)", "Download", new { imgName = Model.DocumentIdea.ToString() })
                    }
                    else
                    {
                        <span>Không có tài liệu đi kèm</span>
                    }
                </p>

                <p><span style="font-size:16px"><strong>5 Th&ocirc;ng tin kh&aacute;c</strong></span></p>

                <div style="display: flex; align-items:center;">
                    <span style="font-size:14px; flex:1"><strong>Thời gian đăng k&yacute;:&nbsp;</strong> @(String.Format("{0:dd/MM/yyyy}", Model.DateSend))</span>
                    <span style="font-size:14px; flex:1"><strong>Trạng th&aacute;i:&nbsp;</strong> @Model.NameStauts</span>
                </div>
                <p></p>

            </div>
        </div>
    </div>
</main>

