        function addComentTruth(id) {
            $(`#${id} .boxCmt`).css('display', 'flex');
            $(`#${id} .commentViewBox`).css('display', 'flex');
            $(`#${id} #viewCmt`).css('display', 'block');
        }
        function viewComment(id) {
            if ($(`#${id} .commentViewBox`).css("display") == "flex") {
                $(`#${id} .commentViewBox`).css('display', 'none');
                $(`#${id} #viewCmt`).css('display', 'none');
                $(`#${id} .boxCmt`).css('display', 'none');
            }
        }
        const progressSelection = document.querySelectorAll(".progressSelection");
        const truthConten = document.querySelectorAll(".truthConten");

        progressSelection.forEach(function (el) {
            el.addEventListener('click', opentab);
        })
        function opentab(el) {
            let btn = el.currentTarget;
            var electronic = btn.dataset.electronic;
            truthConten.forEach(function (el) {
                el.classList.remove('active')
            })
            progressSelection.forEach(function (el) {
                el.classList.remove('active')
            })
            document.querySelector("#" + electronic).classList.add("active");
            btn.classList.add("active");
        }

    </script>
