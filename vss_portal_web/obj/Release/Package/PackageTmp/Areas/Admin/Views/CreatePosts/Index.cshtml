    <input maxlength="255" style="width: 100%" placeholder="Enter your title " name="PostTitle" />
    <div class="marginBottom-20" style="margin-top: 25px">Mô tả bài viết</div>
    <input maxlength="500" style="width: 100%" placeholder="Enter your Description " name="Description" />
