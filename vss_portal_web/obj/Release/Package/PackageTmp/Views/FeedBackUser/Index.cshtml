
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">
    <div class="container">
        <div style="margin-bottom: 50px; width: 100%; display: flex; justify-content: space-between; align-items: center;">
            <div class="arrow2" style="margin-top: 20px">
                <p class="text">Yêu cầu hỗ trợ</p>
                <div class="arrow-right"></div>
            </div>
        </div>
        <div class="container-fluid mt-3" style="margin-bottom: 100px">
            <form>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label for="myEmail">Họ Tên</label>
                        <input type="text" class="form-control"
                               id="myEmail" placeholder="Cho chúng tôi biết tên của bạn...">
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="myPassword">Mail viettel</label>
                        <input type="text" class="form-control"
                               id="myPassword" placeholder="Email viettel">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Tiêu đề yêu cầu hỗ trợ</label>
                    <input type="text" class="form-control"
                           id="myAddress" placeholder="Tiêu đề yêu cầu hỗ trợ">
                </div>
                <div class="form-group">
                    <label for="inputAddress">Tải file ảnh, đơn yêu cầu lên (nếu có)</label>
                    <div style="display:flex">
                        <label for="pickImg"><i class="icofont-upload-alt" style="cursor: pointer; color: red; font-size: 30px; margin: 0 19px;"></i></label>
                        <div id="display-img"></div>
                        <input onchange="getImg(this.value);" style="visibility:hidden" id="pickImg" name="ThumbNail" type="file" accept=".jpg,.png,.jpeg, gif, .doc, .pdf" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress2">Nội dung yêu cầu hỗ trợ</label>
                    <textarea class="form-control" rows="12" cols="60" name="description">Nội dung yêu cầu hỗ trợ...</textarea>
                </div>
                <button type="submit" class="btn btn-danger">Giử yêu cầu</button>
            </form>
        </div>
    </div>
</main>

<script>
    function getImg(nameimg) {
        var img = nameimg.replace(/^.*\\/, "");
        $('#display-img').html(img);

    }
</script>
