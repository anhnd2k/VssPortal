
@{
    ViewBag.Title = "DetailTruthRegester";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model DBConect.model.GetListRealTalk
<style>
    .imgRedirect {
        margin-right: 10px
    }
</style>
<main style="min-height: 69vh" id="main">
    <div style="margin-top: 50px; margin-bottom: 50px" class="container">
        <div style="height: 30px; width: 100%; display:flex; align-items:center; padding: 0 24px; margin: 30px 0">
            <a href="@Url.Action("Index", "Home")" class="imgRedirect">
                <img src="~/Areas/Admin/assets_admin/assets/img/ic_home.png" />
            </a>
            <div class="imgRedirect">
                <img src="~/Areas/Admin/assets_admin/assets/img/ic_arrow_right.png" />
            </div>
            <a href="@Url.Action("TruthRegestered", "RealTalk")" class="imgRedirect" style="color: black; font-size: 20px">Danh sách nói thật đi bạn đã đóng góp</a>
            <div class="imgRedirect">
                <img src="~/Areas/Admin/assets_admin/assets/img/ic_arrow_right.png" />
            </div>
            <div style="color: black; font-size: 20px">Chi tiết nói thật đi</div>
        </div>
        <div style="margin-top: 40px; padding: 0 24px;" class="col-lg-12 mb-4">
            <div class="card" style="min-height: 65vh">
                <div style="display: flex; align-items:center">
                    <div style="width: 130px; height: 130px; border-radius: 65px; background-color:#ccc; color: #fff; margin: 20px 30px 20px 30px; display:flex; align-items:center; justify-content:center; font-size: 30px">
                        @Model.NameSender[0].ToString().ToUpper()
                    </div>
                    <div style="display:flex; flex-direction:column;justify-content:space-between; height: 130px">
                        <div style="text-transform:uppercase; color: black;font-size: 30px">@Model.NameSender</div>
                        <div style="font-size: 16px;">@Model.MailSender</div>
                        <div style="padding: 5px 18px; border-radius: 10px; background-color: #ccc; color: #fff; font-size: 14px; box-sizing: border-box; width: max-content;">@Model.NameFieldRealTalk</div>
                    </div>
                </div>
                <div style="display: flex; padding: 20px 0 20px 0; border-top: 1px solid #ccc; border-bottom: 1px solid #ccc">
                    <div style="padding-left: 30px; width:192px">
                        Tiêu đề
                    </div>
                    <div>
                        @Model.TitleRealTalk
                    </div>
                </div>
                <div style="display: flex; padding: 20px 0 4px 0; border-bottom: 1px solid #ccc">
                    <div style="padding-left: 30px; width:192px">
                        Thực trạng
                    </div>
                    <div>
                        @Html.Raw(Model.Reality)
                    </div>
                </div>
                <div style="display:flex; padding: 20px 0 4px 0; border-bottom: 1px solid #ccc">
                    <div style="padding-left: 30px; width:192px">
                        Nội dung
                    </div>
                    <div>
                        @Html.Raw(Model.Suggestion)
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

